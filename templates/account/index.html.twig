{% extends './base_back.html.twig' %}

{% block title %}Listes des Comptes{% endblock %}

{% block body %}
    <h1>Account index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomComplet</th>
                <th>NumTel</th>
                <th>Email</th>
                <th>Sexe</th>
                <th>DateNaiss</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Brochure</th>
                <th>Services</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.id }}</td>
                <td>{{ account.NomComplet }}</td>
                <td>{{ account.NumTel }}</td>
                <td>{{ account.Email }}</td>
                <td>{{ account.Sexe }}</td>
                <td>{{ account.DateNaiss ? account.DateNaiss|date('Y-m-d') : '' }}</td>
                <td>{{ account.Adresse }}</td>
                <td>{{ account.Ville }}</td>
                <td>{{ account.brochureFilename }}</td>
                <td>{{ account.Services }}</td>


                <td>
                    <a href="{{ path('app_account_show', {'id': account.id}) }}">show</a>
                    <a href="{{ path('app_account_edit', {'id': account.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_account_new') }}">Create new</a>
{% endblock %}
