{% extends './base_back.html.twig' %}

{% block title %}Depenses index{% endblock %}
{% block body %}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0"> </h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="">Home</a></li>
                        <li class="breadcrumb-item active">Depenses table</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
   
    <a href="{{ path('app_back_depenses_new') }}">Ajouter un Depense</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id_depense</th>
                <th>Title</th>
                <th>Prenom_destinataire</th>
                <th>Rib_destinataire</th>
                <th>Montant</th>
                <th>Backgroundcolor</th>
                <th>Datedebut</th>
                <th>Categorie_depense</th>
                <th>Type_depense</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for depense in depenses %}
            <tr>
                <td>{{ depense.idDepense }}</td>
                <td>{{ depense.title }}</td>
                <td>{{ depense.prenomDestinataire }}</td>
                <td>{{ depense.ribDestinataire }}</td>
                <td>{{ depense.montant }}</td>
                <td>{{ depense.backgroundcolor }}</td>
                <td>{{ depense.datedebut ? depense.datedebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ depense.categorieDepense }}</td>
                <td>{{ depense.typeDepense }}</td>
                <td> <button>
                    <a href="{{ path('app_back_depenses_edit', {'id_depense': depense.idDepense}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                      </svg></a></button>
                    
                </td>
                <td>
                    {{ include('back_depenses/_delete_form.html.twig') }}
                </td>    
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
   
{% endblock %}
