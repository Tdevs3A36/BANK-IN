<!DOCTYPE html>

<title>Budget index</title>

{% block body %}
    <h1>Budget index</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Montant</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for budget in budgets %}
            <tr>
                
                <td>{{ budget.montant }}</td>
                <td>{{ budget.datedebut ? budget.datedebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ budget.datefin ? budget.datefin|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_budget_show', {'id': budget.id}) }}">show</a>
                    <a href="{{ path('app_budget_edit', {'id': budget.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_budget_new') }}">Create new</a>
{% endblock %}
